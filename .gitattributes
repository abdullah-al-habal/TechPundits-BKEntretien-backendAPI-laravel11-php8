# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Declare files that will always have LF line endings on checkout
*.php text eol=lf
*.js text eol=lf
*.css text eol=lf
*.html text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.xml text eol=lf
*.txt text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary

# Diff settings for specific file types
*.php diff=php
*.phtml diff=php
*.blade.php diff=html
*.css diff=css
*.html diff=html
*.md diff=markdown
*.js diff=javascript

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore
/.github export-ignore
CHANGELOG.md export-ignore
.styleci.yml export-ignore
phpunit.xml export-ignore
README.md export-ignore
.editorconfig export-ignore
.php_cs export-ignore
.php_cs.dist export-ignore
.phpstorm.meta.php export-ignore

# Treat Blade templates as text files
*.blade.php text

# Linguist language overrides
*.blade.php linguist-language=PHP